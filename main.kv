#: import SwapTransition kivy.uix.screenmanager.SwapTransition

<Dynamic_card>:
    size_hint: .3,None
    pos_hint:{'top':.85,'left':.5}
    
    canvas.before:
        # Color:
        #     rgba: 0, 0, 0, 1
        # Line:
        #     width: 3
        #     rectangle: self.x , self.y , self.width, self.height

        Color:
            rgba: 0, .5, .5, 1
        RoundedRectangle:
            pos: self.x, self.y 
            size:self.width, self.height    
            
    MDLabel:
        disabled: True
        id: lbl_title
        pos_hint:{'top':1,'right':.66}
        size_hint: .65,None
        text: "Title"
        icon_right: "file-edit"
        icon_right_color: app.theme_cls.primary_color
        color_mode: 'custom'
        line_color_focus: 0, 0, 0, 1
    IconRightWidget:
        icon: "file-edit" 
        pos_hint:{'top':1,'right':1} 
    IconRightWidget:
        icon: "trash-can" 
        pos_hint:{'top':1,'right':.9} 
        
    ScrollView:
        pos_hint:{'top':.75,'right':.95}
        size_hint: .9,.7     
        MDTextField:
            disabled: True
            id: lbl_body
            color_mode: 'custom'
            size_hint: 1,None
            pos_hint:{'right':.2}
            line_color_focus: 0, 0, 0, 1
            text: "Body"
            multiline: True 

<calling_functions>:
    screen_manager:screen_manager
   
        
    NavigationLayout:
        
        ScreenManager:
            id:screen_manager
            transition: SwapTransition()
#HOMESCREEN STARTS HERE           
            MDScreen:
                name:"homescreen"
                # MDFloatLayout:
                #     orientation:"vertical"
                #     size_hint: 1,.8
                    
                ScrollView:
                    pos_hint:{'top':.92,'left':.5}
                    StackLayout:
                        orientatio: "lr-tb"
                        padding:(10, 20, 0, 0)
                        id: sl_home



                MDToolbar:
                    visible: True
                    id: toolbar_home_screen
                    title:"ToDo List"
                    pos_hint: {'top':1,'bottom':0}
                    radius: [0, 0, 30, 0]
                    md_bg_color: app.theme_cls.primary_color
                    #right_action_items: [["plus-circle", lambda x: root.change_screen()]]
        
                    MDIconButton:
                        icon: "plus-circle" 
                        pos_hint: {'center_y':.5}
                        user_font_size: "32sp"
                        on_release:
                            root.change_screen()
               


                    
                    
#HOMESCREEN ENDS HERE

#NEW TASK SCREEN STARTS HERE            
            MDScreen:
                name: "new_task"
                    
                MDFloatLayout:
                    oreintation:"vertical"
                    pos_hint: {'top':.9}
                    size_hint: 1,1
                    
                    MDTextField:
                        id: txt_create_title
                        hint_text: "Title"
                        pos_hint: {'top':1}
                        color_mode: 'custom'
                        line_color_focus: 1,1,1,1
                    MDSeparator:
                        height: "1dp"
                    MDFlatButton:
                        text: "Save"
                        size_hint: 1,None
                        md_bg_color: app.theme_cls.primary_color
                        pos_hint:{'bottom':1}
                        on_release:
                            root.create_task()
                    ScrollView:
                        pos_hint: {'top':.88}
                        size_hint: 1,.7
                        MDTextField:
                            disabled: False
                            id: txt_create_body
                            word_wrap: True
                            multiline: True    
                            hint_text: "Text"
                            color_mode: 'custom'
                            line_color_focus: 1,1,1,1
                        # pos_hint: {'top':.8}
                    
                MDToolbar:
                    visible: True
                    id: toolbar_home_screen
                    title: "Title"
                    pos_hint:{'top':1}
                    radius: [0, 0, 30, 0]
                    md_bg_color: app.theme_cls.primary_color
                    #right_action_items: [["arrow-left-circle", lambda x: root.change_screen()]]
                    user_font_size: "64sp"
                    MDIconButton:
                        icon: "arrow-left-circle" 
                        pos_hint: {'center_y':.5}
                        user_font_size: "32sp"
                        on_release:
                            root.change_screen()
                
                    