#: import SwapTransition kivy.uix.screenmanager.SwapTransition

<calling_functions>:
    screen_manager:screen_manager
    FloatLayout:
        id: fl_textarea
        orientation:"vertical"
        size_hint: 1,.7
        pos_hint:{'top':.9}
        
    NavigationLayout:
        
        ScreenManager:
            id:screen_manager
            transition: SwapTransition()
#HOMESCREEN STARTS HERE           
            MDScreen:
                name:"homescreen"
                MDToolbar:
                    visible: True
                    id: toolbar_home_screen
                    title: "Title"
                    pos_hint: {'top':1,'bottom':0}
                    radius: [0, 0, 0, 0]
                    md_bg_color: app.theme_cls.primary_color
                    right_action_items: [["plus-circle", lambda x: root.scr_new_task()]]
                     
                MDLabel:
                    text:"Hello"
#HOMESCREEN ENDS HERE

#NEW TASK SCREEN STARTS HERE            
            MDScreen:
                name: "new_task"
                MDToolbar:
                    visible: True
                    id: toolbar_home_screen
                    title: "Title"
                    pos_hint:{'top':1}
                    radius: [0, 0, 0, 0]
                    md_bg_color: app.theme_cls.primary_color
                    right_action_items: [["arrow-left-circle", lambda x: root.scr_new_task()]]
                    

                MDLabel: 
                    text:"New Task Window"
                