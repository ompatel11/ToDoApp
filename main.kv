                    md_bg_color: app.theme_cls.primary_color
                    #right_action_items: [["plus-circle", lambda x: root.change_screen()]]
        
                    MDIconButton:
                        icon: "plus-circle" 
                        pos_hint: {'center_y':.5}
                        user_font_size: "32sp"
                        on_release:
                            root.change_screen()
               


                    
                    
